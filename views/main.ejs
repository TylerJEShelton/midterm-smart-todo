<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart ToDo</title>

  <!-- <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" /> -->
  <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <main>
    <div class="add-item-form">
      <form action="/items" method="POST">
        <input class="form-control add-item-input" type="text" name="title" placeholder="Enter your ToDo item">
        <input class="form-control add-description-input" type="text" name="description" placeholder="Enter your notes">
        <button class="btn-green" type="submit" class="btn btn-primary">Add New ToDo Item</button>
      </form>
    </div>

    <section id="lists-container">
      <section class="list">
        <div class="list-headings ">
          <h4>Films / TV Series</h4>
        </div>
        <div id="films-containers" class="containers padding5">
          <ul class="list-table">
            <% for (const film of films) { %>
              <li class="list-row" data-id="<%= film.id %>">
                <%= film.title %>
              </li>
              <% } %>
          </ul>
        </div>
      </section>

      <section class="list">
        <div class="list-headings">
          <h4>Restaurants / Cafes</h4>
        </div>
        <div id="food-container" class="containers padding5">
          <ul class="list-table">
            <% for (let restaurant of restaurants) { %>
              <li class="list-row" data-id="<%= restaurant.id %>">
                <%= restaurant.title %>
              </li>
              <% } %>
          </ul>
        </div>
      </section>

      <section class="list">
        <div class=" list-headings">
          <h4>Books</h4>
        </div>
        <div id="books-container" class="containers padding5">
          <ul class="list-table">
            <% for (let book of books) { %>
              <li class="list-row" data-id="<%= book.id %>">
                <%= book.title %>
              </li>
              <% } %>
          </ul>
        </div>
      </section>

      <section class="list">
        <div class=" list-headings">
          <h4>Products to Buy</h4>
        </div>
        <div id="products-container" class="containers padding5">
          <ul class="list-table">
            <% for (let product of products) { %>
              <li class="list-row" data-id="<%= product.id %>">
                <%= product.title %>
              </li>
              <% } %>
          </ul>
        </div>
      </section>

      <section class="list">
        <div class="  list-headings">
          <h4>Other</h4>
        </div>
        <div id="other-container" class="containers padding5">
          <ul class="list-table">
            <% for (let item of other) { %>
              <li class="list-row" data-id="<%= item.id %>">
                <%= item.title %>
              </li>
              <% } %>
          </ul>
        </div>
      </section>
    </section>
  </main>

