<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart ToDo</title>

  <!-- <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" /> -->
  <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <main>
    <form action="/add_item" method="POST">
      <input class="form-control" type="text" name="item" placeholder="Enter your ToDo item">
      <button type="submit" class="btn btn-primary">Add New ToDo Item</button>
    </form>
    <section id="lists-container">
      <section>
        <div class="list-headings">
          <h4>Films / TV Series</h4>
        </div>
        <div id="films-container"></div>
      </section>

      <section>
        <div class="list-headings">
          <h4>Restaurants / Cafes</h4>
        </div>
        <div id="food-container"></div>
      </section>

      <section>
        <div class="list-headings">
          <h4>Books</h4>
        </div>
        <div id="books-container"></div>
      </section>

      <section>
        <div class="list-headings">
          <h4>Products to Buy</h4>
        </div>
        <div id="products-container"></div>
      </section>

      <section>
        <div class="list-headings">
          <h4>Other</h4>
        </div>
        <div id="other-container"></div>
      </section>
    </section>
  </main>
</body>


</html>
